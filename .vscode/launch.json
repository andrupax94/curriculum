    "version": "0.2.0",
   
    "compounds": [
        {
            "name": "Launch Edge Headless and attach DevTools",
            "configurations": [
                "Launch Microsoft Edge in headless mode",
                "Open Edge DevTools"
            ]
        },
        {
            "name": "Launch Edge and attach DevTools",
            "configurations": [
                "Launch Microsoft Edge",
                "Open Edge DevTools"
            ]
        }
    ],
    "configurations": [
        {
            "type": "msedge",
            "name": "Launch Microsoft Edge",
            "request": "launch",
            "webRoot": "${workspaceFolder}/public_html",
            "pathMapping": {
                "/": "${workspaceFolder}/public_html"
            },
            "runtimeArgs": [
                "--remote-debugging-port=9222"
            ],
            "url": "http://curriculumandres.test", // Provide your project's url to finish configuring
            "presentation": {
                "hidden": true
            }
        },
        {
            "type": "msedge",
            "name": "Launch Microsoft Edge in headless mode",
            "request": "launch",
            "webRoot": "${workspaceFolder}/public_html",
            "pathMapping": {
                "/": "${workspaceFolder}/public_html"
            },
            "runtimeArgs": [
                "--headless",
                "--remote-debugging-port=9222"
            ],
            "url": "http://curriculumandres.test", // Provide your project's url to finish configuring
            "presentation": {
                "hidden": true
            }
        },
        {
            "type": "vscode-edge-devtools.debug",
            "name": "Open Edge DevTools",
            "request": "attach",
            "webRoot": "${workspaceFolder}/public_html",
            "pathMapping": {
                "/": "${workspaceFolder}/public_html"
            },
            "url": "http://curriculumandres.test", // Provide your project's url to finish configuring
            "presentation": {
                "hidden": true
            }
        }
    ],
} 